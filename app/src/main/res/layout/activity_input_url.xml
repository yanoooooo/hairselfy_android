<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.hasebe.yano.hairselfy.inputUrlActivity"
    android:background="#e6b2e8eb">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ip_edit"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_marginTop="145dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="IP Address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_edit"
        android:inputType="text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/ip_edit"
        android:hint="Room ID"
        android:layout_below="@+id/ip_edit"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Hair Selfyを始める"
        android:id="@+id/start_button"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/id_edit"
        android:layout_centerHorizontal="true"
        android:background="#ff6767"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Bluetoothに接続"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/ip_edit"
        android:layout_marginBottom="66dp"
        android:background="#94d4ff"
        android:textColor="#ffffff"
        android:layout_alignEnd="@+id/ip_edit"
        android:layout_alignParentStart="true" />
</RelativeLayout>
